<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:background="@color/transparent">
    <SeekBar
        android:id="@+id/music_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:progressBackgroundTint="@color/black"
        android:thumb="@color/transparent"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:max="100"
        android:progress="25"/>
    <TextView
        android:id="@+id/label_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/music_progress_bar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:text="0:00"
        android:textStyle="bold"
        android:textColor="@color/lime_green"/>
    <TextView
        android:id="@+id/label_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/music_progress_bar"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:text="0:00"
        android:textStyle="bold"
        android:textColor="@color/lime_green"/>
    <TextView
        android:id="@+id/label_title"
        android:text="Unknow Music"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/label_current_time"
        android:layout_toStartOf="@id/label_total_time"
        android:layout_above="@id/music_progress_bar"/>
    <TextView
        android:id="@+id/label_artist"
        android:text="Unknow Artist"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/label_current_time"
        android:layout_toStartOf="@id/label_total_time"
        android:layout_above="@id/label_title"/>
</RelativeLayout>